{
	"start" : "pnpm i",
	"updates": "pnpm up",
	"updates-latest": "pnpm up --latest",
	"build" : "pnpm pes lint-fix && pnpm pes build-cj && pnpm pes build-pkg",
	"build-cj" : "pnpm esbuild src/index.js --bundle --minify --outfile=dist/build/bundle.cjs --format=cjs --platform=node",
	"build-pkg" : "pkg dist/build/bundle.cjs --out-path=dist --compress Gzip",
	"deploy": "pnpm pes lint-fix && npm login && npm publish --access public",
	"lint": "eslint . --ext .js",
	"lint-fix": "eslint . --ext .js --fix",
	"cli": "node src/index.js $1"
}